package exercise_5;

import java.util.Scanner;

public class P5_2 {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.print("Please input an integer: ");
		int a = in.nextInt();
		System.out.print("Please input another integer: ");
		int b = in.nextInt();
		System.out.println("Please input yet another integer: ");
		int c = in.nextInt();
		int smallest_input = 0;
		int largest_input = 0;

		if (a > b && a > c) {
			largest_input = largest_input + a;
		} else if (a < b && a < c) {
			smallest_input = smallest_input + a;
		}

		if (b > a && b > c) {
			largest_input = largest_input + b;
		} else if (b < a && b < c) {
			smallest_input = smallest_input + b;
		}

		if (c > a && c > b) {
			largest_input = largest_input + c;
		} else if (c < a && c < b) {
			smallest_input = smallest_input + c;
		}

		System.out.println("The smallest input was: " + smallest_input);
		System.out.println("The largest input was: " + largest_input);

	}

}
