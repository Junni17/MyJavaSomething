	public static void main(String[] args) {
		Scanner in = new Scanner (System.in);
		System.out.print("Input integer a: ");
		int a = in.nextInt();
		System.out.println("Input integer b: ");
		int b = in.nextInt();
		int sum = 0;
		int i = Math.min(a, b);
		while (i <= Math.max(a, b)){
			if (i % 2 != 0){
				sum = sum + 1;
			}
			i++;
		}
	}

}

