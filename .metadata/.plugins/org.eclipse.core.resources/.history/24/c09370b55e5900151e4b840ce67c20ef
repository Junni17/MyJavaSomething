package exercise_5;

import java.util.Scanner;

public class P5_2 {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.print("Please input an integer: ");
		int a = in.nextInt();
		System.out.print("Please input another integer: ");
		int b = in.nextInt();
		System.out.println("Please input yet another integer: ");
		int c = in.nextInt();
		int smallest_input = a;
		int largest_input = b;

		if (a > b && a > c) {
			a = largest_input;
		} else if (a < b && a < c) {
			a = smallest_input;
		} else if (b > a && b > c) {
			b = largest_input;
		} else if (b < a && b < c) {
			b = smallest_input;
		} else if (c > a && c > b) {
			c = largest_input;
		} else if (c < a && c < b) {
			c = smallest_input;
		}
		System.out.println("The smallest input was: " + smallest_input);
		System.out.println("The largest input was: " + largest_input);

	}

}
